[hub]
protocol = https
host = github.gds

[credential]
helper = /opt/boxen/bin/boxen-git-credential

[core]
        excludesfile = /opt/boxen/config/git/gitignore
	editor = /usr/bin/vim

[user]
	email = matt.bostock@digital.cabinet-office.gov.uk
	name = Matt Bostock

[push]
	default = simple

[alias]
        st = status
        ci = commit -v
        co = checkout
        cb = checkout -b
        br = branch
        lg = log --pretty=oneline --topo-order --graph --abbrev-commit --decorate
        fpush = push -f origin head
        wdiff = diff --color-words

        # Run a command in the git repo root, e.g. 'git exec rspec'
	exec = "!exec "

        # Delete merged branches.
        brc = "!f() { \
          git branch --merged master |\
          grep -v '^[ *] master$' |\
          xargs git branch --delete; \
        }; f"

[color]
        diff = auto
        branch = auto
        status = auto
