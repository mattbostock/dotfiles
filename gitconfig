[hub]
protocol = https
host = github.gds

[credential]
helper = /opt/boxen/bin/boxen-git-credential

[core]
        excludesfile = /opt/boxen/config/git/gitignore
	editor = /usr/bin/vim

[user]
	email = matt@mattbostock.com
	name = Matt Bostock

[push]
        # Use current rather than simple for compat with older Git versions
        default = current

[alias]
        st = status
        ci = commit -v
        co = checkout
        cb = checkout -b
        br = branch
        lg = log --pretty=oneline --topo-order --graph --abbrev-commit --decorate
        fpush = push -f origin head
        wdiff = diff --color-words
        re = !git rebase -i origin/master

        # Run a command in the git repo root, e.g. 'git exec rspec'
	exec = "!exec "

        # Show branches by date of last commit
        brdate = "! f() { \
          for k in $(git branch $@ | sed 's/^..//; s/ .*//'); do \
            echo "$(git log -1 --pretty='%Cgreen%ci %Cblue(%cr)%Creset ' $k) $k"; \
          done | sort -r; \
        }; f"

        # Delete merged branches.
        brc = "!f() { \
          git branch --merged master |\
          grep -v '^[ *] master$' |\
          xargs git branch --delete; \
        }; f"

[color]
        diff = auto
        branch = auto
        status = auto
